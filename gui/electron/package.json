{
  "name": "futu-trends-electron",
  "version": "1.0.0",
  "description": "Futu Trends Electron App - First Version",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron:build:main": "tsc -p electron/tsconfig.json",
    "electron:dev": "npm run electron:build:main && concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && npm run electron:build:main && electron-builder",
    "backend:dev": "cd .. && python backend/api.py --config=../env/signal_window.ini"
  },
  "dependencies": {
    "vue": "^3.4.0",
    "naive-ui": "^2.38.0",
    "lightweight-charts": "^5.0.0",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "concurrently": "^8.2.0",
    "wait-on": "^7.0.0"
  }
}

